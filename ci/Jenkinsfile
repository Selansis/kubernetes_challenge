// ci/Jenkinsfile
pipeline {
    // Agent 'any' lub 'label' dla tego konkretnego hosta
    agent any 
    
    // ... (params, stages, itp.)

    stages {
        stage('Terraform Execution') {
            steps {
                script {
                    // W tym miejscu env.AWS_ACCESS_KEY_ID i env.AWS_SECRET_ACCESS_KEY 
                    // są już dostępne dzięki zmiennym systemowym!
                    
                    env.AWS_DEFAULT_REGION = params.AWS_REGION // Wstrzykujemy tylko region z parametru

                    dir('infrastructure') {
                        sh 'terraform init'

                        if (params.ACTION == 'apply') {
                            // Terraform automatycznie użyje zmiennych środowiskowych do autoryzacji
                            sh 'terraform apply -auto-approve'
                        } else if (params.ACTION == 'destroy') {
                            sh 'terraform destroy -auto-approve'
                        }
                    }
                }
            }
        }
    }
}